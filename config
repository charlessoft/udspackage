    ${MONGODB_SLAVE} \
    ${MONGODB_SLAVE} \
    )

#MONGODB ARIBTER
MONGODB_ARBITER=10.211.55.22:27017
MONGODB_ARBITER_DBPATH=/home/mongodb/data/slave
MONGODB_ARBITER_LOGPATH=/home/mongodb/log/slave.log
MONGODB_ARBITER_PIDFILEPATH=/home/mongodb/slave.pid

#MONGODB SLAVE


RIAK_FILE=riak-2.0.2-1.el5.x86_64.rpm

IPTABLES_FILE=/etc/sysconfig/iptables
IPTABLES_ACCESS_PORT=( \
    ${RIAK_HTTP_PORT} \
    ${RIAK_EPMD_PORT} \
    ${RIAK_HANDOFF_PORT} \
    ${RIAK_DEFPORT} \
    "`echo ${MONGODB_MASTER} | cut -d: -f 2`" \
    "`echo ${MONGODB_SLAVE} | cut -d: -f 2`" \
    "`echo ${MONGODB_ARBITER} | cut -d: -f 2`" \
    )
